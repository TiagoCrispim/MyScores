<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cartaoJogoVitoria"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="4dp"
        android:layout_height="90dp"
        android:layout_gravity="top"
        android:layout_marginTop="8dp"
        card_view:cardBackgroundColor="#9fc7d6"
        card_view:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resultadoEquipa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="VitÃ³ria"
                android:textAlignment="center"
                android:textColor="#212121"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resultadoJogo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Resultado: "
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/resultadotJogo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="2-1"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                app:layout_constraintStart_toEndOf="@+id/resultadoJogo1"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dataJogo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data: "
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/datatJogo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="30/11/2018"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                app:layout_constraintStart_toEndOf="@+id/dataJogo1"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cartaoJogoDerrota"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="4dp"
        android:layout_height="90dp"
        android:layout_below="@+id/cartaoJogoVitoria"
        android:layout_marginTop="8dp"
        card_view:cardBackgroundColor="#9fc7d6"
        card_view:layout_constraintTop_toBottomOf="@+id/cartaoJogoVitoria"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/resultadoEquipa2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Derrota"
                    android:textAlignment="center"
                    android:textColor="#212121"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/resultadoJogo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Resultado: "
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/resultadotJogo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="2-3"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    app:layout_constraintStart_toEndOf="@+id/resultadoJogo1"
                    app:layout_constraintTop_toTopOf="parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dataJogo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data: "
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/datatJogo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21/11/2018"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    app:layout_constraintStart_toEndOf="@+id/dataJogo1"
                    app:layout_constraintTop_toTopOf="parent"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>